# Application secrets - Generate secure random strings for production!
SECRET_KEY=your_production_secret_key_here
JWT_SECRET_KEY=your_production_jwt_secret_key_here

# Database connection - Will be provided by Digital Ocean managed database
DATABASE_URL=postgresql://username:password@hostname:5432/database

# Redis connection - Will be provided by Digital Ocean managed Redis
REDIS_URL=redis://hostname:6379/0

# OpenAI API configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4o-mini

# Environment setting (must be production for production deployment)
ENVIRONMENT=production

# CORS configuration
# Use comma-separated format for arrays
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# App settings
DEBUG=false
APP_NAME="Sherlock Holmes Learning App" 